<% if @show_error %>
<div class="alert alert-warning">
  <p>Unknown username or password.  If you used the grant system in a previous year, you must create a new account this year.</p>
</div>
<% end %>

<%= form_tag(@form_action_path) do %>
  <div class="form-group">
    <%= label :session, :email %>
    <%= text_field :session, :email, :placeholder => "Email Address", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label :session, :password %>
    <%= password_field :session, :password, :placeholder => "Password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= submit_tag("Sign in", class: "btn btn-primary") %>
    <% if @form_action_path.ends_with? "artist" %>
      <%= link_to "Forgot password?", new_password_reset_path(type: "artists") %>
    <% elsif @form_action_path.ends_with? "voter" %>
      <%= link_to "Forgot password?", new_password_reset_path(type: "voters") %>
    <% elsif @form_action_path.ends_with? "admin" %>
      <%= link_to "Forgot password?", new_password_reset_path(type: "admins") %>
    <% end %>
  </div>
<% end %>
