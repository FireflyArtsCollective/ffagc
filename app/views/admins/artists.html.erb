<h1><%= link_to "Firefly Art Grants", :controller => "home", :action => "index" %>: Admins</h1>

<% if admin_logged_in? %>
  <%= render partial: 'shared/links' %>

  <h2>Artists</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    <% @artists.each do |v| %>
    <tr>
      <td><%= link_to v['name'], :controller => "admins", :action => "artist_info", :id => v['id']%></td>
      <td><%= v['contact_name'] %></td>
      <td><%= v['email'] %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
