<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "Assign Submissions", admins_assign_path, class: 'btn btn-default', method: :post %>
    <% if can? :new, Grant %>
      <%= link_to "Add Grant", new_grant_path, class: 'btn btn-default' %>
    <% end %>
    <% if can? :new, Admin %>
      <%= link_to "Add Admin", new_admin_path, class: 'btn btn-default' %>
    <% end %>
  </div>
  <div class="btn-group pull-right">
    <%= link_to "Clear assignments", admins_clear_assignments_path , class: 'btn btn-warning', method: :post %>
  </div>
</div>
<br />

<% if any_vote_open? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Verified Voter Assignments</h3>
    </div>
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Assigned</th>
        </tr>
        </thead>
        <tbody>
        <% @verified_voters.each do |vv| %>
        <tr>
          <td><%= vv.name %></td>
          <td><%= vv.email %></td>
          <td>
            <%= vv.grant_submissions.map { |gs| "#{gs.name}(#{gs.id})" }.join(', ').html_safe %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
  </div>
<% else %>
  <div class="alert alert-info">
    No active grants for vote at this time
  </div>
<% end %>
