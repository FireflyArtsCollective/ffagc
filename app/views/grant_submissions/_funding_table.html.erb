<table class="text-right">
  <tr>
    <td>
      Requested:
    </td>
    <td>
      <%= number_to_currency grant_submission.requested_funding_dollars %>
    </td>
  </tr>
  <tr>
    <td>
    <% if grant_submission.funded? %>
      Granted:
    <% elsif grant_submission.granted_funding_dollars && grant_submission.granted_funding_dollars > 0 %>
      Proposed:
    <% elsif grant_submission.funding_decision %>
      Not Funded
    <% end %>
    </td>
    <td>
      <% if grant_submission.granted_funding_dollars && grant_submission.granted_funding_dollars > 0 %>
        <%= number_to_currency grant_submission.granted_funding_dollars %>
      <% end %>
    </td>
  </tr>
</table>
