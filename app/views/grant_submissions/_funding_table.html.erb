<table class="text-right">
  <tr>
    <td>
      Requested:
    </td>
    <td>
      <%= funding_requests_pretty(grant_submission) %>
    </td>
  </tr>
  <tr>
    <td>
    <% if grant_submission.funded? %>
      Granted:
    <% elsif not artist_logged_in? %>
      <% if grant_submission.granted_funding_dollars %>
        Proposed:
      <% elsif grant_submission.funding_decision %>
        Not funding
      <% end %>
    <% end %>
    </td>
    <td>
      <% if artist_logged_in? %>
        <% if grant_submission.funding_decision && (grant_submission.granted_funding_dollars || 0) > 0 %>
          <%= number_to_currency(grant_submission.granted_funding_dollars, precision: 0) %>
        <% end %>
      <% else %>
        <% if grant_submission.granted_funding_dollars %>
          <%= number_to_currency(grant_submission.granted_funding_dollars, precision: 0) %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>
